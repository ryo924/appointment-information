<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @schedule.title %>
      </p>
      <%= link_to "by #{@schedule.user.last_name} #{@schedule.user.first_name}", root_path, class: :prototype__user %>
      <% if current_user == @schedule.user %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_schedule_path, class: :prototype__btn %>
          <%= link_to "削除する", schedule_path, method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">日程</p>
          <p class="detail__message">
            <%= @schedule.date %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">取引先名</p>
          <p class="detail__message">
            <%= @schedule.company %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">顧客名</p>
          <p class="detail__message">
            <%= @schedule.person %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">場所</p>
          <p class="detail__message">
            <%= @schedule.place %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">目的</p>
          <p class="detail__message">
            <%= @schedule.purpose %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">往訪歴</p>
          <p class="detail__message">
            <%= @schedule.relation.name %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %> 
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
